<h1>Project: <%= @project.name %></h1>

<h3>This project is due in <%= @project.days_remaining %> days (<%= @project.weeks_remaining %> weeks)</h3><br>

<!-- Show tasks in project -->
<h4>Project Tasks
    <% if current_user.is_admin? %>
      | <%= link_to "Add task", new_project_task_path(@project.id) %>
    <% end %>
  </h4>

<% if @project.tasks.empty? %>
  <p>There are currently no users assigned to this project</p>
<% else %>
<!-- Filter control -->
      <h5>Filter tasks:</h5>
      <%= form_tag(project_path(@project), method: "get") do %>
        <%= select_tag "filter_user_id", options_from_collection_for_select(@users.uniq, "id", "username"), include_blank: true %>
        <%= submit_tag "Filter" %>
      <% end %>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Assignee</th>
        <th>Percent Complete</th>
        <th>Action</th>
        <th>Project</th>
      </tr>
    </thead>
    <tbody>


      <p><%= render partial: "tasks/task", collection: @tasks %></p>
    </tbody>
  </table>

<% end %>

<!-- Show users assigned to project -->
<h4>Assigned Users
      <% if current_user.is_admin? %>
        | <%= link_to "Assign/Edit Users", edit_project_path(@project) %>
      <% end %>
    </h4>
  <% if @project.users.empty? %>
    <p>There are currently no users assigned to this project</p>
  <% else %>
    <table>
      <thead>
        <tr>
          <th>Username</th>
          <th>Contact</th>
          <th># of tasks assigned</th>
          <% if current_user.is_admin? %>
            <th>Details</th>
            <th>Action</th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <p><%= render(@project.users.uniq) %></p>
      </tbody>
    </table>
  <% end %>

<!-- Show deadline -->
<h4>Project Deadline
      <% if current_user.is_admin? %>
        | <%= link_to "Edit Deadline", edit_project_path(@project) %>
      <% end %>
  </h4>
<h5><%= due_date @project %></h5>
<br>

<!-- Delete project -->
<% if current_user.is_admin? %>
  <%= form_for @project, method: :delete do |f| %>
    <%= f.submit "Delete project" %><br/>
  <% end %>
<% end %>
