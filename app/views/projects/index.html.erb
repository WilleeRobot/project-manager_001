<% if params[:user_id] %>
  <h1><%= User.find(params[:user_id]).username %>'s projects</h1>
<% else %>
  <h1>All Projects</h1>
<% end %>

<% if @projects.empty? %>
  <p>There are no projects to show</p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Project Name</th>
        <th>Due Date</th>
        <th>Details</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <p><%= render(@projects) %></p>
    </tbody>
  </table>
<% end %>
