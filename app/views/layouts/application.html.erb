<!DOCTYPE html>
<html>
  <head>
    <title>ProjectManagerV001</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body>


  <!-- template for Navbar -->
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="<%= user_path(current_user) %>">Dashboard</a>
          <a class="navbar-brand" href="<%= user_projects_path(current_user) %>">Your Projects</a>
          <a class="navbar-brand" href="<%= new_task_path %>">Create Task</a>
          <a class="navbar-brand" href="<%= user_tasks_path(current_user) %>">Your Tasks</a>

          <%= link_to "Logout", logout_path, class: "navbar-brand" %>
        </div>
      </div>
    </div>
    <div class="center">
      <!-- <div class="info"> -->
        <div class="container">
        <%= yield %>
        </div>
      <!-- </div> -->
    </div>

  </body>

  <!-- Footer template -->
  <footer class="center">
		<p>Helpful Research Resources:<br>
			<a href="http://wikipedia.org" >Wikipedia</a><br>
			<a href="http://google.com" >Google it!</a><br>
			<a href="mailto: support@systems.com">Email Support</a>
		</p>
	</footer>

</html>
