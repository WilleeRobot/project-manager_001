<!DOCTYPE html>
<html>
  <head>
    <title>ProjectManagerV001</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body>
  <div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = 'https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v3.2&appId=480629982458973&autoLogAppEvents=1';
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>

  <!-- template for Navbar -->
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <%= link_to "Dashboard", user_path(current_user), class: "navbar-brand" %>
          <%= link_to "Your Tasks", user_tasks_path(current_user), class: "navbar-brand" %>          
          <%= link_to "Create Task", new_task_path, class: "navbar-brand" if !current_user.projects.empty? %>

          <%= link_to "Logout", logout_path, class: "navbar-brand" %>
        </div>
      </div>
    </div>
    <div class="center">
      <!-- <div class="info"> -->
        <div class="container">
        <!-- show error messages if any -->
        <% flash.each do |key, value| %>
          <% if value.class == Array %>
            <% value.each do |message|%>
              <%= content_tag :div, message %>
            <% end%>
          <% else %>
            <%= content_tag :div, value, class: "flash #{key}" %>
          <% end %>
        <% end %> <!-- flash errors end -->
        <%= yield %>
        </div>
      <!-- </div> -->
    </div>

  </body>

  <!-- Footer template -->
  <footer class="center">
		<p>Helpful Research Resources:<br>
			<a href="http://wikipedia.org" >Wikipedia</a><br>
			<a href="http://google.com" >Google it!</a><br>
			<a href="mailto: support@systems.com">Email Support</a>
		</p>
	</footer>

</html>
