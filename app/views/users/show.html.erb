<h1><%= @user.username %>'s Profile</h1>
<h3>Email: <a href="mailto: <%= @user.email %>"><%= @user.email %></a></h3>
<h3>Todo:</h3>
<h4>You have <%= @user.tasks.count %> task(s) outstanding | <%= link_to "View your tasks", user_tasks_path(@user.id) %></h4>
<br>

<!-- Show project list-->
<h4>Your Project List: </h4>
<% if @user.projects.empty? %>
  <p>There are currently no projects to show</p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Project Name</th>
        <th>Due Date</th>
        <th>Details</th>
      </tr>
    </thead>
    <tbody>
      <p><%= render partial: "project", collection: @user.projects, locals: {user_id: @user.id} || "There are no projects to show." %></p>
    </tbody>
  </table>
<% end %>
