<%= form_for task, html:{class:"new_user", id: "new_user"} do |f| %>
  <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title, placeholder: "Enter a title", class:"form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :content %><br>
    <%= f.text_field :content, placeholder: "Task details", class:"form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :percent_complete %><br>
    <%= f.text_field :percent_complete, placeholder: "Enter a number 1-100", class:"form-control"%>
  </div>

  <div class="form-group">
  <%= f.label :project_id %><br>
    <%= f.collection_select :project_id, Project.all, :id, :name %>
  </div>

  <div class="form-group">
  <%= f.label :user_id, "Assignee" %><br>
    <%= f.collection_select :user_id, User.all, :id, :username %>
  </div>

  <%= f.submit %><br>
<% end %>
