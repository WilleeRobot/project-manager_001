<h3>Username: <%= @user.username %> | <%= link_to "Edit", edit_admin_user_path %></h3>
<h3>Email: <a href="mailto: <%= @user.email %>"><%= @user.email %></a> | <%= link_to "Edit", edit_admin_user_path %></h3>
<h3>Todo:</h3>
<h4><%= @user.tasks.count %> task(s) outstanding</h4>
<br>

<!-- Show project list-->
<h4>Project List: </h4>
<% if @user.projects.empty? %>
  <p>There are currently no projects to show</p>
<% else %>
  <%= render partial: '/admin/projects/list', locals:{user: @user} %>
<% end %>

<% if current_user.is_admin? %>
  <%= form_for @user, method: :delete do |f| %>
    <%= f.submit "Delete user" %><br/>
  <% end %>
<% end %>
